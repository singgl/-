.bacgrout{
  position: fixed;
  height: 250rpx;
  width: 100%;
}
.bacgrout image{
  width: 100%;
  height: 100%;
}
.page{
  width: 650rpx;
  margin: 0 auto;
  position: relative;
  top: 100rpx;
}
.top{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #fff;
  display: flex;
  border-radius: 10rpx 10rpx 0 0;
  text-align: center;
}
.person,
.express{
  flex: 1;
  height: 90rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 10rpx 10rpx 0rpx 0;
}

.active{
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  top: -10rpx;
  border-radius: 10rpx 0 0rpx 0;
  border-width: 20rpx 20rpx 100rpx 0rpx;
  box-sizing: border-box;
  border-style: none solid solid;
  border-color: transparent transparent #fff;
}
.actives{
  color: #333;
  position: relative;
  top: -10rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx 10rpx 0 0;
  border-width: 0rpx 0rpx 100rpx 20rpx;
  box-sizing: border-box;
  border-style: none solid solid;
  border-color: transparent transparent #fff;
}
.tobbom{
  height: 400rpx;
  visibility: hidden;
  position: relative;
}
.visblite{
  visibility: visible;
}
.b_person,
.b-express{
  width: 100%;
  height: 100%;
  background: #fff;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 0 0 10rpx 10rpx;
}
