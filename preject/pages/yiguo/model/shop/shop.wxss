page{
    height: 100%;
}
.body{
  position: relative;
  height: auto;
}
.details{
  position: absolute;
  right: 20rpx;
  top: 0;
  width: 90rpx;
  height: 190rpx;
  line-height: 190rpx;
  color: #fff;
  font-size: 30rpx;
  background: #EB4335;
  z-index: 1;
  text-align: center;
}

.c--f60{color: #f60;}
.clamp1, .clamp2, .clamp3{display: -webkit-box!important; overflow: hidden; -webkit-box-orient: vertical;}
.clamp1{-webkit-line-clamp:1;}
.clamp2{-webkit-line-clamp:2;}
.clamp3{-webkit-line-clamp:3;}
 
.carts-list{padding: 0 20rpx;height: 190rpx;position: relative;}
.carts-list .carts-item{ 
  box-sizing: border-box; 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
  padding: 20rpx 10rpx; 
  width: 100%; 
  height: 190rpx;
  position: relative;
  box-shadow:0px 0px 6px 0px rgba(187, 35, 35, 0.08);
  margin:14rpx 0;
  z-index: 2;
  transition: left 0.2s ease-in-out;
  background: #fff;
}
.carts-item .carts-cnt{
  flex: 1; 
  padding: 0 20rpx;
}
.carts-cnt .img{
  height: 150rpx; 
  width: 150rpx;
  float:left; 
  margin-right: 20rpx; 
}
.carts-cnt .carts-image{
  height: 100%; 
  width: 100%;
}
.carts-cnt .carts-info{display: flex; flex-direction: column; justify-content: space-between; min-height: 150rpx;}
.carts-cnt .carts-title{font-size: 28rpx;}
.carts-cnt .carts-subtitle{display: flex; flex-direction: row; font-size: 28rpx;}
.carts-list .carts-item .carts-del{position: absolute; top: 20rpx; right: 10rpx;}
 
/*数量加减*/
.carts-num{border: 1rpx solid #aaa; border-radius: 5rpx; display: flex; align-items: center; align-self: flex-end; text-align: center; height: 50rpx;}
.carts-num input{
  border-left: 1rpx solid #aaa; 
  border-right: 1rpx solid #aaa; 
  font-size: 30rpx; 
  font-family: arial; 
  height: 50rpx; 
  line-height: 50rpx; 
  width: 80rpx;
}
.carts-num .minus, .carts-num .plus{color: #000; text-align: center; line-height: 50rpx; width: 40rpx;}
.carts-num .minus{font-size: 30rpx;}
.carts-num .minus.disabled{color: #ccc;}
.carts-num .plus{font-size: 34rpx;}

.carts-footer{
  display: flex;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  z-index: 2;
  /* align-items:center; */
}
.chkAll, .footer-left{
  display: flex;
  font-size: 30rpx;
  color: #666;
}
.chkAll{
  width: auto;
  font-size: 32rpx;
  color: #333;
}
.All{
  padding: 18rpx 20rpx 18rpx 24rpx;
}

.footer-left{
  font-size: 30rpx;
  color: #666;
  position: absolute;
  right: 0rpx;
}
.total{
  padding-right: 15rpx;
}
.btn-pay{
  background: #EB4335;
  padding: 0 8rpx;
  color: #fff;
}