/**index.wxss**/
/*导航*/
.tops{
  position: relative;
  width: auto;
  height: 375rpx;
}
.swiper-box {
    height:375rpx;
    position: absolute;
    top: 0;
    left: 0;
    width: 750rpx;
}
.slide-img{
    display: block;
    height: 375rpx;
    width:750rpx;
}
.broadcast{
  position: absolute;
  bottom: 20rpx;
  width: 750rpx;
  display: flex;
  justify-content:center;
}
.broadcast>.riduo{
  display: block;
  width: 15rpx;
  height: 15rpx;
  line-height: 30rpx;
  border-radius: 50%;
  background: #fff;
  margin: 0 10rpx;
}
.broadcast>.active{
  width: 30rpx;
  border-radius: 5rpx;
  background: rgb(76, 125, 190);
}

.partition{
  height: 20rpx;
  background: #fff;
}


/* 遮罩广告 */
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.mask>.bt_mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0,.5)
}
.mask>.m_conten{
  position: absolute;
  width: 400rpx;
  height: 350rpx;
  top: 40%;
  margin-top: -175rpx;
  left: 50%;
  margin-left: -200rpx;
}
.mask>.m_conten>image{
  width: 100%;
  height: 100%;
}
.carts-del{
  position: absolute;
  bottom: 35%;
  left: 50%;
  margin-left: -10rpx;
}


.banner-swiper {  width: 100%;  height: 400rpx;  overflow: hidden;}
swiper {  display: block;  height: 400rpx;  position: relative;}
.slide-image {  
  width: 98%;  
  display: block;  
  margin: 0 auto;  
  height: 320rpx;  
  margin-top:40rpx;
  border-radius: 10rpx;
}

.actives{ 
  margin-top:25rpx;
  height: 350rpx;
  max-height: 350rpx;
  border-radius: 10rpx;
  transition: max-height all .2s ease-in 0s
}